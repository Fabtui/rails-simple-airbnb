<h1>Best place ever!</h1>

<div class="container">
<% @flats.each do |flat| %>
<div class="card-trip">
  <img src="https://source.unsplash.com/1600x900/?appartement" />
  <div class="card-trip-infos">
    <div>
      <h2><%= link_to flat.name, flat_path(flat) %> </h2>
    <p><%= flat.description %> </p>
  <p>For <%= flat.number_of_guests %> people</p>
    </div>
    <h2 class="card-trip-pricing"><%= flat.price_per_night %> RPS</h2>
  </div>
</div>
<% end %>
</div>
